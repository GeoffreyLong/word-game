extends layout

block content
  div(id="board") 
    table
      tbody
        - var i = 0
        - each val in game.boardElements
          if (i % game.boardXSize == 0)
            <tr>
          td 
            button(class="boardElm existent") #{val}
          - i++

  // Might want something more dynamic than a table
  div(id="letters")
    table
      tbody
        - each val in game.letterElements
          td 
            button(class="letterElm") #{val}
